<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label for="landmark_name">Name</label>
  <input type="text" id="landmark_name" name="landmark[name]" value="<%= @landmark.name %>"><br>

  <label for="landmark_year_completed">Name</label>
  <input type="text" id="landmark_year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>">

  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
